<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.buet.sky.airrecalculator.CityMap"
            prefHeight="700.0" prefWidth="1000.0">

    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
        <Label text="Add a City" style="-fx-font-size: 16;" />

        <HBox spacing="10">
            <TextField fx:id="nameField" promptText="City Name" />
            <TextField fx:id="xField" promptText="X Coordinate" />
            <TextField fx:id="yField" promptText="Y Coordinate" />
            <TextField fx:id="oilCostField" promptText="Oil Cost" />
            <TextField fx:id="fillingSpeedField" promptText="Filling Speed" />
            <Button text="Add City" onAction="#onAddCity" />
        </HBox>

        <!-- Larger canvas and resizable -->
        <Canvas fx:id="mapCanvas" width="960" height="600" style="-fx-border-color: black;" VBox.vgrow="ALWAYS" />
    </VBox>

</AnchorPane>
