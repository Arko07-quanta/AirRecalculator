<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="719.0" prefWidth="977.0" styleClass="fancyVBox" stylesheets="@../../../../style/MainPage.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.buet.sky.airrecalculator.ProfilePageController">

    <children>
        <!-- Header: same as other pages -->
        <AnchorPane prefHeight="241.0" prefWidth="978.0">
            <children>
                <ImageView fitHeight="124.0" fitWidth="912.0" pickOnBounds="true">
                    <image>
                        <Image url="@../../../../images/banner.gif" />
                    </image>
                </ImageView>

                <HBox alignment="CENTER" layoutY="184.0" prefHeight="59.0" prefWidth="917.0" spacing="45">
                    <children>
                        <Button mnemonicParsing="false" onAction="#onMain" prefHeight="60.0" prefWidth="143.0" text="Home" />
                        <Button mnemonicParsing="false" onAction="#onSchedulePage" prefHeight="60.0" prefWidth="143.0" text="Schedule" />
                        <Button mnemonicParsing="false" onAction="#onRequestPage" prefHeight="60.0" prefWidth="143.0" text="Request" />
                        <Button fx:id="profileName" mnemonicParsing="false" prefHeight="60.0" prefWidth="143.0" text="Login" />
                        <Button mnemonicParsing="false" onAction="#onRegistrationPage" prefHeight="60.0" prefWidth="143.0" text="Registration" />
                    </children>
                </HBox>
            </children>
        </AnchorPane>

        <!-- Profile Info Section -->
        <AnchorPane prefHeight="397.0" prefWidth="898.0">
            <children>
                <VBox alignment="TOP_CENTER" layoutX="50.0" layoutY="20.0" prefWidth="877.0" spacing="20.0">
                    <children>

                        <!-- Optional profile picture -->
                        <ImageView fitHeight="120.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../../../images/profile_icon.png" />
                            </image>
                        </ImageView>

                        <!-- Name -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <Label prefWidth="80" text="Name:" />
                            <Label fx:id="nameLabel" styleClass="infoLabel" text="John Doe" />
                        </HBox>

                        <!-- ID -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <Label prefWidth="80" text="ID:" />
                            <Label fx:id="idLabel" styleClass="infoLabel" text="20201234" />
                        </HBox>

                        <!-- Plane Count -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <Label prefWidth="80" text="Planes:" />
                            <Label fx:id="planeCountLabel" styleClass="infoLabel" text="3" />
                        </HBox>

                        <!-- Buttons -->
                        <HBox alignment="CENTER" spacing="20.0">
                            <Button fx:id="planeInfoButton" onAction="#onPlaneInfoClicked" prefWidth="160" text="Plane Information" />
                            <Button fx:id="addPlaneButton" onAction="#onAddPlaneClicked" prefWidth="120" text="Add Plane" />
                            <Button fx:id="logoutButton" onAction="#onLogoutClicked" prefWidth="120" text="Log Out" />
                        </HBox>

                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </children>
</VBox>
