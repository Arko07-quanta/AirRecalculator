<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.buet.sky.airrecalculator.PlaneInfoController"
      prefHeight="720.0"
      prefWidth="977.0"
      styleClass="fancyVBox"
      stylesheets="@../../../../style/MainPage.css">

    <children>

        <!-- Banner & Navigation -->
        <AnchorPane prefHeight="241.0" prefWidth="977.0">
            <children>
                <ImageView fitHeight="124.0" fitWidth="977.0" preserveRatio="false" pickOnBounds="true">
                    <image>
                        <Image url="@../../../../images/banner.gif"/>
                    </image>
                </ImageView>

                <!-- Navigation Bar -->
                <HBox layoutY="180.0" spacing="30" alignment="CENTER" prefWidth="977.0">
                    <children>
                        <Button onAction="#onMain" prefHeight="36.0" prefWidth="120.0" styleClass="slimButton" text="Home"/>
                        <Button onAction="#onSchedulePage" prefHeight="36.0" prefWidth="120.0" styleClass="slimButton" text="Schedule"/>
                        <Button onAction="#onRequestPage" prefHeight="36.0" prefWidth="120.0" styleClass="slimButton" text="Request"/>
                        <Button fx:id="profileName" onAction="#onLoginPage" prefHeight="36.0" prefWidth="120.0" styleClass="slimButton" text="Login"/>
                        <Button onAction="#onRegistrationPage" prefHeight="36.0" prefWidth="120.0" styleClass="slimButton" text="Registration"/>
                    </children>
                </HBox>
            </children>
        </AnchorPane>

        <!-- Scrollable Plane Cards -->
        <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS" styleClass="scroll-pane">
            <content>
                <VBox fx:id="cardContainer"
                      alignment="TOP_CENTER"
                      spacing="20"
                      prefWidth="940.0"
                      styleClass="cardContainer">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                </VBox>
            </content>
        </ScrollPane>

    </children>
</VBox>
